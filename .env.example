# ==============================
# PowerUp - Environment Variables (Microservice)
# ==============================
# Copy this file to `.env` and fill in sensitive values.

# --- Server ---
SPRING_APPLICATION_NAME=Restaurant-Service
PORT=8084
APP_VERSION=1.0.0
# SPRING_PROFILES_ACTIVE=dev

# --- Database (PostgreSQL) ---
DB_URL=jdbc:postgresql://localhost:5433/hexagonal-restaurant-service
DB_USERNAME=postgres
DB_PASSWORD=postgres
# Optional if you use multiple schemas
DB_SCHEMA=public

# --- OpenAPI / Metadata ---
# Read by OpenApiConfiguration via appdescription/appversion properties
APPDESCRIPTION='PowerUpAPI'
APPVERSION=dev

# --- Security (JWT) ---
JWT_SECRET=mi-secreto-super-seguro-para-jwt-en-todos-los-servicios-2024
JWT_EXPIRATION=86400000

# --- Actuator/Management ---
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
